{
	"name": "@float-toolkit/core",
	"version": "2.0.0",
	"description": "Float Toolkit is a Node.js package for working with floating-point numbers.",
	"main": "./dist/index.js",
	"type": "module",
	"types": "./typings/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "npm run test && rm -rf dist typings && npm run format && tsc",
		"format": "prettier --write .",
		"docs": "npm run test && rm -rf docs && npm run format && typedoc",
		"buildWithDocs": "rm -rf docs && npm run build && typedoc",
		"test": "jest",
		"testWatch": "jest --watch"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/float-toolkit/core.git"
	},
	"keywords": [
		"float",
		"floating-point",
		"number",
		"round",
		"math",
		"no-dependencies",
		"dependency-less",
		"Node.js"
	],
	"author": "LuisFerLCC",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/float-toolkit/core/issues"
	},
	"homepage": "https://float-toolkit.web.app/",
	"devDependencies": {
		"@types/node": "^17.0.35",
		"jest": "^28.1.0",
		"prettier": "^2.6.2",
		"ts-jest": "^28.0.3",
		"typedoc": "^0.22.15",
		"typedoc-plugin-rename-defaults": "^0.4.0",
		"typescript": "^4.6.4"
	}
}
