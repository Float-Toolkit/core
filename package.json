{
	"name": "@float-toolkit/core",
	"version": "2.0.0",
	"description": "Float Toolkit is an NPM package for working with floating-point numbers.",
	"main": "./dist/index.js",
	"type": "module",
	"types": "./typings/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "rm -rf docs && npm run build:package && typedoc",
		"build:package": "rm -rf dist typings && npm test && node scripts/esbuild.js",
		"build:docs": "rm -rf docs && npm test && typedoc",
		"test": "jest",
		"test:watch": "npm run pretest && jest --watch",
		"pretest": "rm -rf coverage && node scripts/versionSync.js && npm run format",
		"format": "prettier --write . && eslint --ext .js,.ts --fix ."
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/float-toolkit/core.git"
	},
	"keywords": [
		"float",
		"floating-point",
		"number",
		"round",
		"math",
		"no-dependencies",
		"dependency-less"
	],
	"author": "LuisFerLCC",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/float-toolkit/core/issues"
	},
	"homepage": "https://float-toolkit.web.app/",
	"devDependencies": {
		"@types/eslint": "^8.4.10",
		"@types/eslint-plugin-prettier": "^3.1.0",
		"@types/jest": "^29.2.2",
		"@types/node": "^18.11.9",
		"@typescript-eslint/eslint-plugin": "^5.42.1",
		"@typescript-eslint/parser": "^5.42.1",
		"esbuild": "^0.14.54",
		"esbuild-plugin-d-ts-path-alias": "^2.0.0",
		"eslint": "^8.27.0",
		"eslint-config-google": "^0.14.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "^29.3.1",
		"jest-ts-webcompat-resolver": "^1.0.0",
		"prettier": "^2.7.1",
		"ts-jest": "^29.0.3",
		"tslib": "^2.4.1",
		"typedoc": "^0.23.20",
		"typedoc-plugin-rename-defaults": "^0.6.4",
		"typescript": "^4.7.4"
	}
}
