{
	"name": "@float-toolkit/core",
	"version": "1.0.2",
	"description": "Float Toolkit is a Node.js package for working with floating-point numbers.",
	"main": "./dist/index.js",
	"type": "module",
	"types": "./typings/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "rm -rf dist typings && npm run format && tsc",
		"format": "prettier --write .",
		"docs": "rm -rf docs && npm run format && typedoc",
		"buildWithDocs": "rm -rf docs && npm run build && typedoc"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/float-toolkit/core.git"
	},
	"keywords": [
		"float",
		"floating-point",
		"number",
		"round",
		"math",
		"no-dependencies",
		"dependency-less",
		"Node.js"
	],
	"author": "LuisFerLCC",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/float-toolkit/core/issues"
	},
	"homepage": "https://float-toolkit.web.app/",
	"devDependencies": {
		"prettier": "^2.5.1",
		"typedoc": "^0.22.11",
		"typedoc-plugin-rename-defaults": "^0.4.0",
		"typescript": "^4.5.5"
	}
}
