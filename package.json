{
	"name": "@float-toolkit/core",
	"version": "1.0.0",
	"description": "Float Toolkit is a Node.js package for working with floating point numbers.",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./typings/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs"
		}
	},
	"scripts": {
		"build": "rm -rf dist typings && npm run format && tsc && gen-esm-wrapper dist dist/index.mjs",
		"format": "prettier --write .",
		"docs": "npm run format && typedoc",
		"buildWithDocs": "npm run build && typedoc"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Float-Toolkit/core.git"
	},
	"keywords": [
		"float",
		"number",
		"math",
		"Node.js"
	],
	"author": "LuisFerLCC",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/Float-Toolkit/core/issues"
	},
	"homepage": "https://github.com/Float-Toolkit/core#readme",
	"devDependencies": {
		"gen-esm-wrapper": "^1.1.3",
		"prettier": "^2.5.1",
		"typedoc": "^0.22.11",
		"typedoc-plugin-rename-defaults": "^0.4.0",
		"typescript": "^4.5.5"
	}
}
