{
	"name": "@float-toolkit/core",
	"version": "2.1.0",
	"description": "Float Toolkit is an NPM package for working with floating-point numbers.",
	"main": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "rm -rf dist && npm test && rollup -c",
		"docs": "rm -rf docs && npm test && typedoc",
		"buildWithDocs": "rm -rf docs && npm run build && typedoc",
		"test": "jest",
		"testWatch": "npm run pretest && jest --watch",
		"format": "prettier --write .",
		"pretest": "rm -rf coverage && npm run format && node scripts/versionSync.js"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/float-toolkit/core.git"
	},
	"keywords": [
		"float",
		"floating-point",
		"number",
		"round",
		"math",
		"no-dependencies",
		"dependency-less"
	],
	"author": "LuisFerLCC",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/float-toolkit/core/issues"
	},
	"homepage": "https://float-toolkit.web.app/",
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@types/jest": "^28.1.3",
		"@types/node": "^17.0.35",
		"jest": "^28.1.0",
		"jest-ts-webcompat-resolver": "^1.0.0",
		"prettier": "^2.6.2",
		"rollup": "^2.75.7",
		"rollup-plugin-typescript2": "^0.32.1",
		"ts-jest": "^28.0.3",
		"tslib": "^2.4.0",
		"typedoc": "^0.22.15",
		"typedoc-plugin-rename-defaults": "^0.4.0",
		"typescript": "^4.6.4"
	}
}
